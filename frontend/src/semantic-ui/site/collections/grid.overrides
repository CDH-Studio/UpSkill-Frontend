/*******************************
         Site Overrides
*******************************/
.ui[class*="vertically divided"].grid > .row:before {
  position: absolute;
  content: "";
  top: 0em;
  left: 0px;

  width: calc(100% - @gutterWidth);
  height: 4px;

  margin: 0% (@gutterWidth / 2);
  box-shadow: 0px 4px 0px @blue;
}
